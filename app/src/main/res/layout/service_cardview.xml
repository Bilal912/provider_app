<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp" >

    <LinearLayout
        android:baselineAligned="false"
        android:background="@drawable/book_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham"
            android:textColor="#000000"
            android:text="Title"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginStart="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
        <TextView
            android:id="@+id/cate_name"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham"
            android:textColor="#000000"
            android:text="Categery Name"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/incall"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham"
            android:textColor="#000000"
            android:text="Incall Rate"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/outcall"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham"
            android:textColor="#000000"
            android:text="Outcall Rate"
            android:textSize="15sp"
            />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.skydoves.elasticviews.ElasticButton
                app:button_duration="250"
                app:button_scale="0.87"
                android:id="@+id/view_id"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:text="View"
                android:backgroundTint="@color/pricecolor"
                android:fontFamily="@font/gotham"
                android:textSize="12sp"
                android:textColor="@color/white"
                />

            <com.skydoves.elasticviews.ElasticButton
                app:button_duration="250"
                app:button_scale="0.87"
                android:id="@+id/edit"
                android:layout_margin="5dp"
                android:backgroundTint="#fcc4a4"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:text="Edit"
                android:fontFamily="@font/gotham"
                android:textSize="12sp"
                android:textColor="@color/white"
                />
            <com.skydoves.elasticviews.ElasticButton
                app:button_duration="250"
                app:button_scale="0.87"
                android:id="@+id/delete"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:backgroundTint="@color/red_btn_bg_color"
                android:text="Delete"
                android:fontFamily="@font/gotham"
                android:textSize="12sp"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>