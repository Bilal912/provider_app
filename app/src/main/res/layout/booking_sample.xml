<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="20dp"
    app:cardCornerRadius="20dp" >
    <LinearLayout
        android:baselineAligned="false"
        android:background="@drawable/book_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70" >

            <TextView
                android:id="@+id/cancel"
                android:background="@drawable/cancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:gravity="end"
                />

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Name"
                android:textSize="18sp"
                />

            <TextView
                android:layout_below="@id/name"
                android:id="@+id/sevice_name"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Service Name"
                android:textSize="14sp"
                />


            <TextView
                android:layout_below="@id/sevice_name"
                android:id="@+id/service_type"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Service Type"
                android:textSize="14sp"
                />

            <TextView
                android:layout_below="@id/service_type"
                android:id="@+id/hour"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Total Hour"
                android:textSize="14sp"
                />

            <TextView
                android:layout_below="@id/hour"
                android:id="@+id/hourly_price"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Hourly price"
                android:textSize="14sp"
                />

            <TextView
                android:layout_below="@id/hourly_price"
                android:id="@+id/location"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Location"
                android:textSize="14sp"
                />

            <TextView
                android:layout_below="@id/location"
                android:id="@+id/date"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Start date"
                android:textSize="14sp"
                />
            <TextView
                android:layout_below="@id/date"
                android:id="@+id/time"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:textColor="#000000"
                android:text="Start time"
                android:textSize="14sp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:fontFamily="@font/gotham"
                android:textColor="#ffffff"
                android:textSize="25sp"
                />
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/price_id"
                android:textAlignment="center"
                android:layout_below="@id/total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
            <com.skydoves.elasticviews.ElasticButton
                app:button_duration="250"
                app:button_scale="0.87"
                android:id="@+id/accept"
                android:layout_margin="5dp"
                android:layout_below="@id/price_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/button_border"
                android:text="Accept"
                android:fontFamily="@font/gotham"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <com.skydoves.elasticviews.ElasticButton
                app:button_duration="250"
                app:button_scale="0.87"
                android:id="@+id/View"
                android:layout_below="@id/accept"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/button_border"
                android:text="View"
                android:fontFamily="@font/gotham"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:gravity="center"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>